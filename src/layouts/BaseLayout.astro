---
const { title = "Acarreos y Trasteos - TuCamion" } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Servicios de acarreos y trasteos con camión. Mudanzas, transporte de muebles y objetos de todo tamaño." />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/src/styles/global.css">

    <style>
      :root { --font-sans: 'Inter', system-ui, -apple-system; }
      body { font-family: var(--font-sans); }
    </style>
  </head>
  <body class="antialiased text-slate-900 bg-white">
    <slot />
  </body>
</html>